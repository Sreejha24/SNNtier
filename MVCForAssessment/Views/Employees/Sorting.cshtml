@model IEnumerable<MVCForAssessment.Models.Employee>

@{
    ViewData["Title"] = "Sorting";

}

<h1>Sorting</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="Sorting" asp-route-data="@ViewData["EmpId"]">
                    @Html.DisplayNameFor(model => model.EmpId)
                </a>
            </th>
            <th>
                <a asp-action="Sorting" asp-route-data="@ViewData["EmpName"]">
                    @Html.DisplayNameFor(model => model.EmpName)
                </a>
            </th>
            <th>
                <a asp-action="Sorting" asp-route-data="@ViewData["City"]">
                    @Html.DisplayNameFor(model => model.City)
                </a>
            </th>
            <th>
                <a asp-action="Sorting" asp-route-data="@ViewData["Salary"]">
                    @Html.DisplayNameFor(model => model.Salary)
                </a>
            </th>

            <th>
                <a asp-action="Sorting" asp-route-data="@ViewData["DeptId"]">
                    @Html.DisplayNameFor(model => model.DeptId)
                </a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EmpId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmpName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Salary)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DeptId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.EmpId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.EmpId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.EmpId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
